@{
    ViewData["Title"] = "Nova pessoa";
}

@model vacinacao.DTO.PessoaDTO;

<h3>Nova pessoa</h3>
<hr>
<form class="form-horizontal" asp-controller="Pessoas" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0"> 
    
    <label asp-for="Cpf">CPF</label>
    <input type="number" asp-for="Cpf" class="form-control" placeholder="12345678910">
    <span asp-validation-for="Cpf"></span><br> 

    <label asp-for="NomeCompleto">Nome completo</label>
    <input type="text" asp-for="NomeCompleto" class="form-control" placeholder="Nome completo">
    <span asp-validation-for="NomeCompleto"></span><br>

    <label asp-for="DataDeNascimento">Data de nascimento</label>
    <input type="date" asp-for="DataDeNascimento" class="form-control">
    <span asp-validation-for="DataDeNascimento"></span><br>

    <label asp-for="EnderecoId">Endere√ßo</label>
    <select class="form-control" asp-for="EnderecoId" asp-items='@(new SelectList(@ViewBag.Enderecos, "Id", "Logradouro"))'></select><br>

    <button class="btn btn-success">Cadastrar</button>
</form>