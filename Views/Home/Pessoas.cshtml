@{
    ViewData["Title"] = "Pessoas";
}

@model IEnumerable<vacinacao.Models.Pessoa>

<h2>Pessoas</h2>
<hr>
<a asp-action="NovaPessoa" asp-controller="Home" class="btn btn-success">Adicionar pessoas</a>
<hr>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>CPF</th>
            <th>Nome completo</th>
            <th>Data de nascimento</th>
            <th>Endere√ßo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pessoa in Model)
        {
            <tr>
                <td>@pessoa.Id</td>
                <td>@pessoa.Cpf</td>
                <td>@pessoa.NomeCompleto</td>
                <td>@pessoa.DataDeNascimento.Date</td>
                <td>@pessoa.Endereco.Logradouro, @pessoa.Endereco.Numero</td>
                <td>
                    <a class="btn btn-primary" href="/Home/EditarPessoa/@pessoa.Id">Editar</a>

                    <form style="display: inline;" asp-controller="Pessoas" asp-action="Deletar">
                        <input type="hidden" name="id" id="id" value="@pessoa.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>