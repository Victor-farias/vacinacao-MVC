@{
    ViewData["Title"] = "Locais de vacinação";
}

@model IEnumerable<vacinacao.Models.LocalDeVacinacao>

<h2>Locais de vacinação</h2>
<hr>
<a asp-action="NovoLocalDeVacinacao" asp-controller="Home" class="btn btn-success">Adicionar local de vacinação</a>
<hr>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Endereço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var localDeVacinacao in Model)
        {
            <tr>
                <td>@localDeVacinacao.Id</td>
                <td>@localDeVacinacao.Nome</td>
                <td>@localDeVacinacao.Endereco.Logradouro, @localDeVacinacao.Endereco.Numero</td>
                <td>
                    <a class="btn btn-primary" href="/Home/EditarLocalDeVacinacao/@localDeVacinacao.Id">Editar</a>

                    <form style="display: inline;" asp-controller="LocaisVacinacao" asp-action="Deletar">
                        <input type="hidden" name="id" id="id" value="@localDeVacinacao.Id">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>